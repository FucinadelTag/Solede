<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%
      site = prismic.get_by_tags ('site')
      siteData = prismic.getBlockData (site.first)
      pageData = siteData['blocks']['milano']

    %>
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= pageData ['title'] || "The Middleman" %></title>

    <link rel="shortcut icon" href="https://lh4.googleusercontent.com/-4EFGp8NIxRg/UotMLOfvJtI/AAAAAAAAeGI/i8xYnYOxMBk/s16-no/favicon.ico" />

    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,600' rel='stylesheet' type='text/css' />

    <script type="text/javascript" src="https://solede.rezdy.com/pluginJs"></script>


    <%= stylesheet_link_tag "app", "style" %>
    <%= javascript_include_tag "modernizr" %>

    <% if current_page.data.headCode  %>
        <%= current_page.data.headCode %>
    <% end %>
  </head>

  <!-- codice ANALITYCS -->
    <script>
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-19846103-22', 'solede.com');
        ga('require', 'displayfeatures');
        ga('send', 'pageview');

    </script>

  <body class="<%= page_classes %>">

  <div class="row">
    <div class="large-12 medium-12 columns margin">
      <a href="/milan/"><%= siteData ['KeyValuePairs']['logo']['value'].as_html (nil) %></a>
      <br />
      <%= siteData ['KeyValuePairs']['pay-off']['value'].as_text %>
    </div>
  </div>

<!-- End Header and Nav -->

<!-- First Band (Slider) -->

<%= yield %>


  <!-- Footer -->

  <footer class="row">
    <div class="large-12 medium-12 columns">
      <hr />
      <div class="row">
        <div class="large-6 medium-6 columns">
          <p>&copy; Copyright Fucina del Tag</p>
        </div>
        <div class="large-6 medium-6 columns">
          <ul class="inline-list right">
            <!-- <li><a href="#">Link 1</a></li>
            <li><a href="#">Link 2</a></li>
            <li><a href="#">Link 3</a></li>
            <li><a href="#">Link 4</a></li> -->
          </ul>
        </div>
      </div>
    </div>
  </footer>

    <% if current_page.data.conversionCode  %>
      <%= current_page.data.conversionCode %>
    <% end %>

    <!-- Google Code per il tag di remarketing -->
    <script type="text/javascript">
    /* <![CDATA[ */
    var google_conversion_id = 977713311;
    var google_custom_params = window.google_tag_params;
    var google_remarketing_only = true;
    /* ]]> */
    </script>
    <script type="text/javascript" src="//www.googleadservices.com/pagead/conversion.js">
    </script>
    <noscript>
    <div style="display:inline;">
    <img height="1" width="1" style="border-style:none;" alt="" src="//googleads.g.doubleclick.net/pagead/viewthroughconversion/977713311/?value=0&amp;guid=ON&amp;script=0"/>
    </div>
    </noscript>


    <%= javascript_include_tag  "all" %>

  </body>

</html>