  <body class="<%= page_classes %>">


  <!-- Nav Bar -->
    <div class="contain-to-grid menu">
        <nav class="top-bar" data-topbar>
            <ul class="title-area">
                <li class="logo">
                    <a href="/milan/"><%= siteData ['KeyValuePairs']['logo']['value'].as_html (nil) %></a>
                    <span><%= siteData ['KeyValuePairs']['pay-off']['value'].as_text %></span>
                </li>
                <li class="toggle-topbar menu-icon"><a href="#">Menu</a></li>
            </ul>
            <section class="top-bar-section">
              <!-- Right Nav Section -->
                <ul class="right">
                    <li><%= link_to 'Milan', '/milan' %></li>
                    <li><%= link_to 'Blog', '/blog' %></li>
                </ul>
            </section>
        </nav>
    </div>

<!-- End Header and Nav -->

<!-- First Band (Slider) -->

<%= yield %>


  <!-- Footer -->

  <footer class="row">
    <div class="large-12 medium-12 columns">
      <hr />
      <div class="row">
        <div class="large-9 medium-9 columns">
          <p>&copy; Fucina del Tag - Via Amp√®re 61/A - VAT 03201900960 | A partnership with: Your Travel Diary di Bellini Beatrice - VAT 08472160962</p>
