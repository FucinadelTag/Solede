<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <%
      site = prismic.get_by_tags ('site')
      siteData = prismic.getBlockData (site.first)
      pageData = siteData['blocks']['milano']

    %>
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || pageData ['title'] %></title>

    <meta name="description" content="<%= data.page.description || pageData ['description'] %>">

    <link rel="shortcut icon" href="https://lh4.googleusercontent.com/-4EFGp8NIxRg/UotMLOfvJtI/AAAAAAAAeGI/i8xYnYOxMBk/s16-no/favicon.ico" />

    <link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:200,400,600' rel='stylesheet' type='text/css' />


    <script type="text/javascript" src="https://solede.rezdy.com/pluginJs"></script>

    <script type="text/javascript">
      (function e(){var e=document.createElement("script");e.type="text/javascript",e.async=true,e.src="//staticw2.yotpo.com/DZN49lELbtzCPmNdQuZOrPTUqFWkvpepBH0Bf8C7/widget.js";var t=document.getElementsByTagName("script")[0];t.parentNode.insertBefore(e,t)})();
    </script>


    <%= stylesheet_link_tag "app", "style" %>
    <%= javascript_include_tag "modernizr" %>

    <% if current_page.data.headCode  %>
        <%= current_page.data.headCode %>
    <% end %>
  </head>

