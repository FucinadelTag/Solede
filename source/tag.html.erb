---
layout: hitlist
pageable: true
per_page: 12
---
Elenco articoli: <strong><%= tagname %></strong>

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>
<ul class="large-block-grid-1 medium-block-grid-1">
<% page_articles.each_with_index do |article, i| %>


    <li>
        <article>
            <div class="row">
                <div class="large-12 columns">
                    <% link_to article do %>
                        <%= tag :img, :src => article.metadata[:page]["image"], :title => article.title %>
                    <% end %>
                    <%= partial("header_post", :locals => { :article => article}) %>
                    <%= article.summary %>
                    <%= link_to 'Read more...', article %>
                </div>
            </div>
        </article>
    </li>

<% end %>
</ul>


<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>